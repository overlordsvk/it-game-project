<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Admin</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>
    <nav class="navbar navbar-expand-lg navbar-dark bg-primary">
        <div class="container">
            <div class="navbar-header">
                @Html.ActionLink("Hra", "Index", "Home", new { area = "Admin" }, new { @class = "navbar-brand" })
            </div>
            <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarColor01" aria-controls="navbarColor01" aria-expanded="true" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarColor01">
                <ul class="navbar-nav mr-auto">
                    <li class="nav-item">@Html.ActionLink("Účty", "Index", "Accounts", new { area = "Admin" }, new { @class = "nav-link" })</li>
                    <li class="nav-item">@Html.ActionLink("Postavy", "Index", "Characters", new { area = "Admin" }, new { @class = "nav-link" })</li>
                    <li class="nav-item">@Html.ActionLink("Skupiny", "Index", "Groups", new { area = "Admin" }, new { @class = "nav-link" })</li>
                </ul>
                <ul class="navbar-nav pull-right">
                    <li class="nav-item"><a class="nav-link" href="~/Account"> @Html.Action("GetUserName", "Account", new { area = "" })</a></li>
                    <li class="nav-item">@Html.ActionLink("Odhlásiť", "Logout", "Account", new { area = "" }, new { @class = "nav-link" })</li>
                </ul>
            </div>
        </div>
    </nav>
    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - Game</p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>