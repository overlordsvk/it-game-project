<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Hra</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>
    <nav class="navbar navbar-expand-lg navbar-dark bg-primary">
        <div class="container">
            <div class="navbar-header">
                @Html.ActionLink("Hra", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
            </div>
            <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarColor01" aria-controls="navbarColor01" aria-expanded="true" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarColor01">
                <ul class="navbar-nav mr-auto">
                    @if (User.Identity.IsAuthenticated)
                    {
                        <li class="nav-item">@Html.ActionLink("Postava", "Index", "Character", null, new { @class = "nav-link" })</li>
                        <li class="nav-item">@Html.ActionLink("Skupina", "Index", "Group", null, new { @class = "nav-link" })</li>
                        <li class="nav-item">@Html.ActionLink("Správy", "MailBox", "Messaging", null, new { @class = "nav-link" })</li>
                        <li class="nav-item">@Html.ActionLink("Súboj", "List", "Fight", null, new { @class = "nav-link" })</li>
                        <li class="nav-item">@Html.ActionLink("Inventár", "Index", "Inventory", null, new { @class = "nav-link" })</li>
                    }
                    <li class="nav-item">@Html.ActionLink("Skupiny", "List", "Group", null, new { @class = "nav-link" })</li>
                    <li class="nav-item">@Html.ActionLink("Zoznam Postáv", "List", "Character", null, new { @class = "nav-link" })</li>
                </ul>
                <ul class="navbar-nav pull-right">
                    @if (User.Identity.IsAuthenticated)
                    {
                        <li class="nav-item"> <a class="nav-link" href="~/Account"> @Html.Action("GetUserName", "Account", new { area = "" }) </a></li>
                    }
                    @if (!User.Identity.IsAuthenticated)
                    {
                        <li class="nav-item">@Html.ActionLink("Prihlásiť sa", "Login", "Account", null, new { @class = "nav-link" })</li>
                        <li class="nav-item">@Html.ActionLink("Registrácia", "Register", "Account", null, new { @class = "nav-link" })</li>
                    }
                    else
                    {
                        <li class="nav-item">@Html.ActionLink("Odhlásenie", "Logout", "Account", null, new { @class = "nav-link" })</li>
                    }
                </ul>
            </div>
        </div>
    </nav>
    <div class="container body-content ">
        @RenderBody()
        <div class="container p-0 float-left">
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - Game</p>
        </footer>
        </div>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>