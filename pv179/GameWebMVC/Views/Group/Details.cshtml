@model BL.DTO.GroupDto

@{
    ViewBag.Title = Model.Name;
}

<h2>Skupina</h2>

<div>
    <h4>@Html.DisplayFor(model => model.Name)</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.Picture)
        </dt>

        <dd>
            <img class="clan-list-img" src="@Html.DisplayFor(model => model.Picture)" />
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Description)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Description)
        </dd>
    </dl>
</div>

<table class="table">
    <tr>
        <th>
            Meno skupiny
        </th>
        <th>
            Obrázok
        </th>
        <th>
            Popis
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model.Members)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                <img class="clan-list-img" src="@Html.DisplayFor(modelItem => item.Picture)" />
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Description)
            </td>
            <td>
                @if (ViewContext.HttpContext.User.IsInRole("Admin"))
                {
                    @Html.ActionLink("Upraviť", "Edit", new { id = item.Id }) <span>|</span>
                }
                @Html.ActionLink("Detail", "Details", new { id = item.Id })
                @if (ViewContext.HttpContext.User.IsInRole("Admin"))
                {
                    <span>|</span>
                    @Html.ActionLink("Zmazať", "Delete", new { id = item.Id })
                }
            </td>
        </tr>
    }

</table>







<p>
    @Html.ActionLink("Upraviť", "Edit", new { id = Model.Id }) |
    @Html.ActionLink("Späť na zoznam skupín", "List")
</p>
