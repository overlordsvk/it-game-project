@model BL.DTO.FightDto

@{
    ViewBag.Title = "Súboj";
}


<div>
    <h2>Súboj</h2>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            Útočník
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Attacker.Name)
        </dd>

        <dt>
            Obranca
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Defender.Name)
        </dd>

        <dt>
            Útočníkova zbraň
        </dt>

        <dd>
            @Html.DisplayFor(model => model.AttackerWeapon.Name)
        </dd>

        <dt>
            Útočníkové brnenie
        </dt>

        <dd>
            @Html.DisplayFor(model => model.AttackerArmor.Name)
        </dd>

        <dt>
            Obrancova zbraň
        </dt>

        <dd>
            @Html.DisplayFor(model => model.DefenderWeapon.Name)
        </dd>

        <dt>
            Obrancove brnenie
        </dt>

        <dd>
            @Html.DisplayFor(model => model.DefenderArmor.Name)
        </dd>

        <dt>
            Výsledok
        </dt>

        @if (Model.AttackSuccess)
        {

            <dd class="text-success">
                @Html.DisplayName("Výhra")
            </dd>

        }
        else
        {
            <dd class="text-danger">
                @Html.DisplayName("Porážka")
            </dd>

        }


    </dl>
</div>
<div>
    <input type="button" value="Naspäť na postavu" class="btn btn-primary" onclick="location.href='@Url.Action("Index", "Character")'" />
    <input type="button" value="Naspäť na súboje" class="btn btn-primary" onclick="location.href='@Url.Action("List")'" />
</div>
