<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Hra</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top justify-content-between">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("Hra", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav navbar-left">
                    @if (User.Identity.IsAuthenticated)
                    {
                        <li>@Html.ActionLink("Postava", "Index", "Character")</li>
                        <li>@Html.ActionLink("Správy", "MailBox", "Messaging")</li>
                    }
                    <li>@Html.ActionLink("Skupiny", "List", "Group")</li>
                </ul>
                <ul class="nav navbar-nav  navbar-right">
                    @if (User.Identity.IsAuthenticated)
                    {
                        <li class="user"> <a href="~/Account"> @Html.Action("GetUserName", "Account")</a></li>
                    }
                    @if (!User.Identity.IsAuthenticated)
                    {
                        <li>@Html.ActionLink("Prihlásiť sa", "Login", "Account")</li>
                        <li>@Html.ActionLink("Registrácia", "Register", "Account")</li>
                    }
                    else
                    {
                        <li>@Html.ActionLink("Odhlásenie", "Logout", "Account")</li>
                    }
                </ul>
            </div>
        </div>
    </div>
    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - Game</p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
