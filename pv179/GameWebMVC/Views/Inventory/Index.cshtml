@model IEnumerable<BL.DTO.ItemDto>


<div>
    <input type="button" value="Kúpiť" class="btn btn-success" style="margin: 10px 0;" onclick="location.href='@Url.Action("Buy")'" />
</div>

<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Attack)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Defense)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Weight)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Price)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Equipped)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ItemType)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Attack)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Defense)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Weight)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Price)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Equipped)
        </td>
        <td>
            @Html.DisplayName(item.ItemType.ToString())
        </td>
        <td>
            @Html.ActionLink("Nasadiť", "Equip", new { id = item.Id }) |
            @Html.ActionLink("Predať", "Sell", new { id = item.Id }) |
            @Html.ActionLink("Detail", "Details", new { id = item.Id })
        </td>
    </tr>
}

</table>
