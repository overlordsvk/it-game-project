@model BL.DTO.MessageDto
@{
    ViewBag.Title = "Odpoveď";
}

@using (Html.BeginForm("Reply", "Messaging")) 
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal" style="clear:both">
        <hr />

        @Html.ValidationSummary(true, "", new { @class = "text-danger" })

        <div class="form-group">
            @Html.HiddenFor(model => model.ChatId)
        </div>

        <div class="form-group" >
            @Html.HiddenFor(model => model.AuthorId)

        </div>

        <div class="form-group" >
            <h5>Odpovedať</h5>
            <div class="col-md-10">
                @Html.TextAreaFor(model => model.Text, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Text, "", new { @class = "text-danger" })
            </div>
        </div>

        


        <div class="form-group" >
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Poslať" class="btn btn-default" />
            </div>
        </div>
    </div>
}
